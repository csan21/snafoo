<h2>Suggestion Page</h2>

<p class="suggestions-left">
  Suggestions left this month:
  <%= session[:suggestion_count] %>
</p>

<h3>Choose one from list to add to voting page</h3>

<%= form_for @suggestion, url: new_suggestion_url(@suggestion), method: :patch do |r| %>
  <%= r.select :id, @dropdown_menu, include_blank: true %><br>
  <%= r.hidden_field :being_voted, { value: true } %>
  <%= r.submit 'Choose Suggestion' %>
<% end %>

<h3>Or make a snack suggestion</h3>

<%= render partial: "errors" %>

<%= form_for(@suggestion) do |f| %>
  <%= f.text_field :name, placeholder: "Snack Name" %><br>
  <%= f.text_field :location, placeholder: "Where to Buy" %><br>
  <%= f.hidden_field :being_voted, { value: true } %>
  <%= f.submit %>
<% end %>
